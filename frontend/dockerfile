# =========================
# Stage 1: Build Vue App
# =========================
FROM node:20-alpine AS build

# Устанавливаем pnpm глобально
RUN npm install -g pnpm

# Рабочая директория
WORKDIR /app

# Копируем только package.json и lock-файл
COPY package*.json ./

# Включаем CI режим для pnpm
ENV CI=true

# Устанавливаем зависимости
RUN pnpm install

# Копируем остальные исходники проекта, кроме node_modules (через .dockerignore)
COPY . .

# Собираем проект Vue
RUN pnpm run build

# =========================
# Stage 2: Production Nginx
# =========================
FROM nginx:alpine

# Копируем билд Vue из предыдущего этапа
COPY --from=build /app/dist /usr/share/nginx/html

# При желании: свой конфиг nginx
# COPY nginx.conf /etc/nginx/conf.d/default.conf

# Экспонируем порт 80
EXPOSE 80

# Запуск nginx в форграунд режиме
CMD ["nginx", "-g", "daemon off;"]
